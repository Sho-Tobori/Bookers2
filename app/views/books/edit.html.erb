<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <% if @book.errors.any? %>
    <div class="row">
    <div class="col-lg-3">
      <ul>
        <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

  <div class="field row">
    <%= form_for(@book) do |f| %>
    <div class="field row">
      <h1>Editing Book</h1>
    </div>
    <div class="field row">
      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-10" %>
    </div>
    <div class="field row">
      <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-xs-10" %>
    </div>
    <div class="field row">
      <h5></h5>
      <%= f.submit 'Update Book', class: "btn btn-primary col-xs-10" %>
    </div>
    <% end %>
  </div>
  <div class="field row">
    <h5></h5>
    <%= link_to "Show", book_path(@book) %> |
    <%= link_to "Back", books_path %>
  </div>
</div>
</div>