<div class="field">
  <h1>User info</h1>
  <div class="field">
    <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= render 'users/follow_stats' %></th>
    </tr>
    <tr>
      <th>followers</th>
      <th><%= render 'users/follower_stats' %></th>
  </table>
    <div class="field">
      <%= render 'users/follow_form' %>
    </div>
    <div class="field">
      <%= link_to("", edit_user_path(@user), class: "btn btn-default glyphicon glyphicon-wrench col-xs-10") %>
    </div>
</div>

<div class="field">
  <%= form_for(@book) do |f| %>
    <div class="field">
      <h2>New book</h2>
    </div>
    <div class="field">
      <h5>Title</h5>
        <%= f.text_field :title, class: "col-xs-10" %>
    </div>
    <div class="field">
      <h5>Opinion</h5>
        <%= f.text_area :body, class: "col-xs-10" %>
    </div>
    <div class="field">
      <h5></h5>
        <%= f.submit 'Create Book', class: "btn btn-primary col-xs-10" %>
      </div>
  <% end %>
</div>