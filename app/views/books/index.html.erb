<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
    <%= @book.errors.full_messages.each do |message| %>
      <% message %>
    <% end %>
<% end %>

<h1>User info</h1>
  <div>
    <h4>Image</h4>
      <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
    <h4>name</h4>
      <%= @user.name %>
    <h4>introduction</h4>
      <%= @user.introduction %>
  </div>
<%= link_to "setting", edit_user_path(:id) %>

<%= form_for(@book) do |f| %>
  <h1>New book</h1>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
  <table border="1">
    <% @books.each do |book| %>
      <tr>
        <th class="bookcomment"></th>
        <th class="bookcomment">Title</th>
        <th class="bookcomment">Opinion</th>
      </tr>
      <tr>
        <td><%= attachment_image_tag current_user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
