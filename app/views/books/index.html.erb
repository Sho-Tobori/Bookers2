<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list' %>
    </div>
      <div class="col-xs-9">
        <h1>Books</h1>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to(book.title, book_path(book)) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
