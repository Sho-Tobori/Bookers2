<div class="main">
  <div class="blog">

  <%= render 'users/list', user: @user, book: @book %>

  </div>
  <div class="sidebar">
    <h1>Books</h1>
      <table>
        <% @books.each do |book| %>
          <tr>
            <th class="bookcomment"></th>
            <th class="bookcomment">Title</th>
            <th class="bookcomment">Opinion</th>
          </tr>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= link_to(book.title, book_path(book)) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>
