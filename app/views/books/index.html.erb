<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:<br>
  <%= @book.errors.full_messages.each do |message| %>
   <% message %>
  <% end %>
<% end %>

<h1>User info</h1>
<div>
<h4>Image</h4>
  <%= @user.profile_image_id %>
<h4>name</h4>
  <%= @user.name %>
<h4>introduction</h4>
  <%= @user.introduction %>
</div>
  <%= link_to "setting", edit_user_path(:id) %>

<%= form_for(@book) do |f| %>
  <h1>New book</h1>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.user_id %></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to 'Show', book_path(book.id) %></td>
    </tr>
    <% end %>
   </tbody>
</table>
