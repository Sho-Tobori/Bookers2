<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list' %>
    </div>
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table">
      <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= link_to(book.title, book_path(book)) %></td>
          <td><%= book.body %></td>
          <% end %>
      </tr>
      </table>
    </div>
  </div>
</div>
