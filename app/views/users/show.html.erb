<div class="main">
 <div class="blog">
  <div class="col-lg-4">

  <%= render 'users/list', user: @user, book: @book %>

  </div>
 </div>
 <div class="sidebar">
  <div class="col-lg-8">
    <h1>Books</h1>
      <table>
        <% @books.each do |book| %>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <tr>
            <td><%= link_to(book.user.name, book_path(book))%></td>
          </tr>
        <% end %>
      </table>
  </div>
 </div>
</div>
