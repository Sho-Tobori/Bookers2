<div class="container">
  <div class="col-lg-3">
    <%= render 'books/list' %>
  </div>
  <div class="col-lg-9">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <tr>
        <% @books.each do |book| %>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= link_to(book.title, book_path(book)) %></td>
        <td><%= book.body %></td>
      </tr>
        <% end %>
    </table>
    </div>
</div>
