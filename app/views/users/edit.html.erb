<div class="container">
  <% if @user.errors.any? %>
  <div class="row">
    <div class="col-lg-3">
      <ul>
        <%= @user.errors.count %>errors prohibited this obj from being saved:<br>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>

<div class="row">
  <div class="col-lg-3">
	<h2>User info</h2>
		<%= form_for(@user) do |f| %>
      <div class="field">
        <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="field">
        <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder:"プロフィール画像"%>
      </div>
      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true %>
      </div>
      <div class="action">
        <input type="submit" name="commit" value="Update User" data-disable-with="Update User">
      </div>
    </div>
  </div>
  <% end %>
</div>