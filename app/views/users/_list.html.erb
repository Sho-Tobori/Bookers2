    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if book.errors.any? %>
      <%= book.errors.count %>errors prohibited this obj from being saved:<br>
      <%= book.errors.full_messages.each do |message| %>
        <% message %>
      <% end %>
    <% end %>

    <h1>User info</h1>
      <div class="page-header">
        <h4>Image</h4>
          <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>
        <div class="page-header">
          <h4>name</h4>
          <%= user.name %>
        </div>
        <h4>introduction</h4>
          <%= user.introduction %>
    <%= link_to("edit_user_path") do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>

    <%= form_for(book) do |f| %>
      <h1>New book</h1>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
    <% end %>