  <div class="container">
    <div class="col-lg-3">
      <%= render 'books/list'%>
    </div>
      <div class="col-lg-9">
        <h1>Users</h1>
        <table class="table">
          <tr>
            <th>Image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <% @users.each do |user| %>
            <td><%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <!-- 遷移先は後ほどUsersのshowページに移動 -->
            <td><%= link_to("Show",user_path(user)) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>