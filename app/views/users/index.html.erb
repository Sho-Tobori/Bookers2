<div class="main">
  <div class="blog">

<%= render 'users/list', user: @user, book: @book %>

  </div>
  <div class="sidebar">
    <h1>Users</h1>
      <table>
        <% @users.each do |user| %>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <!-- 遷移先は後ほどUsersのshowページに移動 -->
            <td><%= link_to("Show",user_path(user)) %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>