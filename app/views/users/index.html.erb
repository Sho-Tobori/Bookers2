<div class="main">
  <div class="blog">
    <div class="col-lg-2">

    <%= render 'books/list'%>

    </div>
  </div>
  <div class="sidebar">
   <div class="col-lg-10">
      <div class="container">
      <table class="table">
      <h1>Users</h1>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th></th>
          </tr>
          <tr>
            <% @users.each do |user| %>
            <td><%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <!-- 遷移先は後ほどUsersのshowページに移動 -->
            <td><%= link_to("Show",user_path(user)) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
 </div>
</div>