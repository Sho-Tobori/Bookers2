<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="header-top">Bookers</h1>
      <nav class="header-bottom">
       <ul class="nav-list">
      <% if user_signed_in? %>
        <li class="nav-list-item">
          <%= link_to "logout", destroy_user_session_path, :style=>"color:gray;", method: :delete %>
        </li>
        <li class="nav-list-item">
          <%= link_to "Books", books_path, :style=>"color:gray;" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "User", users_path, :style=>"color:gray;" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "Home", users_path(current_user),:style=>"color:gray;"  %>
        </li>
      <% else %>
        <li class="nav-list-item">
          <%= link_to "login", new_user_session_path, :style=>"color:gray;" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "sign up", new_user_registration_path, :style=>"color:gray;" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "About", new_book_path, :style=>"color:gray;" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "Home", new_book_path, :style=>"color:gray;" %>
        </li>
        <% end %>
       </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
